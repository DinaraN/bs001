<h1>Listing books</h1>

<table>
<% @books.each do |book| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td>
      <p>cover</p>
    </td>
    <td class="list_description">
       <%= book.author %>
    </td>
    <td class="list_description">
       <%= book.title %>
    </td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New book', new_book_path %>
